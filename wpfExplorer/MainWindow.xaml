<Window x:Class="wpfExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfExplorer"
        mc:Ignorable="d"
        Title="Explorer" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <local:FileTypeToIconConverter x:Key="FileTypeToIconConverter"/>
    </Window.Resources>
    <Grid Name="MainGrid" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--<WrapPanel Name="Menu" Grid.Row="0" Background="#2D2D30" Margin="5">
            <Button Name="SelectionFilesButton">Выделение</Button>
            <Button Name="CommandsFilesButton">Команды</Button>
            <Button Name="NetFilesButton">Сеть</Button>
            <Button Name="TabsFilesButton">Вкладки</Button>
            <Button Name="FavoritesFilesButton">Избранное</Button>
            <Button Name="ViewFilesButton">Вид</Button>
            <Button Name="SettingsFilesButton">Настройки</Button>
            <Button Name="HelpFilesButton">Помощь</Button>
        </WrapPanel>-->
        <WrapPanel Name="Interactions" Grid.Row="1" Background="#2D2D30" Margin="5">
            <Button Name="RefreshInteractionsButton" Click="RefreshInteractionsButton_Click" ClickMode="Press">Refresh</Button>
            <Button Name="RemoveInteractionsButton" Click="RemoveInteractionsButton_Click" ClickMode="Press">Remove</Button>
            <Button Name="UpInteractionsButton" Click="UpInteractionsButton_Click" ClickMode="Press">Up</Button>
        </WrapPanel>
        <Grid Grid.Row="2" Name="Tables" Background="#1E1E1E" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <WrapPanel Name="LeftTableDisks" Grid.Column="0" Grid.Row="0" Margin="5"></WrapPanel>
            <WrapPanel Name="RightTableDisks" Grid.Column="1" Grid.Row="0" Margin="5"></WrapPanel>
            <TextBlock Name="LeftTablePath" Grid.Column="0" Grid.Row="1" Margin="5">Path</TextBlock>
            <TextBlock Name="RightTablePath" Grid.Column="1" Grid.Row="1" Margin="5">Path</TextBlock>

            <DataGrid Name="LeftTable" Grid.Column="0" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="name">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding type, Converter={StaticResource FileTypeToIconConverter}}" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding name}" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding type, UpdateSourceTrigger=PropertyChanged}" Header="type"/>
                    <DataGridTextColumn Binding="{Binding dateCreated, UpdateSourceTrigger=PropertyChanged}" Header="dateCreated"/>
                    <DataGridTextColumn Binding="{Binding dateLastWrite, UpdateSourceTrigger=PropertyChanged}" Header="dateLastWrite"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Name="RightTable" Grid.Column="1" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="name">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding type, Converter={StaticResource FileTypeToIconConverter}}" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding name}" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding type, UpdateSourceTrigger=PropertyChanged}" Header="type"/>
                    <DataGridTextColumn Binding="{Binding dateCreated, UpdateSourceTrigger=PropertyChanged}" Header="dateCreated"/>
                    <DataGridTextColumn Binding="{Binding dateLastWrite, UpdateSourceTrigger=PropertyChanged}" Header="dateLastWrite"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Name="Footer" Grid.Row="3" Background="#2D2D30" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Center" Grid.Column="0" Margin="5">View F4</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="1" Margin="5">Copy F5</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="2" Margin="5">Paste F6</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="3" Margin="5">MakeDir F7</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="4" Margin="5">Delete F8</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="5" Margin="5">Terminal F9</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Column="6" Margin="5">Exit F10</TextBlock>
        </Grid>
    </Grid>
</Window>
